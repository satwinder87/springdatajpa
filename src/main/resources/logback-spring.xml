<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <springProfile name="local">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <pattern>
          <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %-5level %msg ## \(%mdc\) %logger{36} %n</pattern>
        </pattern>
      </encoder>
    </appender>
    <root level="DEBUG">
      <appender-ref ref="STDOUT"/>
    </root>
  </springProfile>
</configuration>
